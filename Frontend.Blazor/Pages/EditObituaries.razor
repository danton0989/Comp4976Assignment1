@page "/obituaries/{Id:int}/edit"
@inject ObituaryService ObituaryService
@inject NavigationManager Navigation
@inject AuthState AuthState
@inject HttpClient HttpClient
@using Frontend.Blazor.Services
@using Frontend.Blazor.Models
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Edit Obituary</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title mb-4">Edit Obituary</h2>

                    @if (!AuthState.IsLoggedIn)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> 
                            You must be logged in to edit an obituary.
                            <a href="/login" class="alert-link">Login here</a>
                        </div>
                    }
                    else if (loading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (model != null)
                    {
                        <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="alert alert-danger" />

                            <div class="mb-3">
                                <label for="fullName" class="form-label">Full Name *</label>
                                <InputText id="fullName" class="form-control" @bind-Value="model.FullName" />
                                <ValidationMessage For="@(() => model.FullName)" />
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="dateOfBirth" class="form-label">Date of Birth *</label>
                                    <InputDate id="dateOfBirth" class="form-control" @bind-Value="model.DateOfBirth" />
                                    <ValidationMessage For="@(() => model.DateOfBirth)" />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="dateOfDeath" class="form-label">Date of Death *</label>
                                    <InputDate id="dateOfDeath" class="form-control" @bind-Value="model.DateOfDeath" />
                                    <ValidationMessage For="@(() => model.DateOfDeath)" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="biography" class="form-label">Biography *</label>
                                <InputTextArea id="biography" class="form-control" rows="8" @bind-Value="model.Biography" 
                                               placeholder="Share memories, achievements, and the story of their life..." />
                                <ValidationMessage For="@(() => model.Biography)" />
                            </div>

                            @if (!string.IsNullOrEmpty(currentPhotoUrl))
                            {
                                <div class="mb-3">
                                    <label class="form-label">Current Photo</label>
                                    <div>
                                        <img src="@($"{apiBase}{currentPhotoUrl}")" class="card-img-top obituary-photo" />
                                    </div>
                                    <small class="form-text text-muted">Note: Photo cannot be changed when editing</small>
                                </div>
                            }

                            @if (error != null)
                            {
                                <div class="alert alert-danger">
                                    <i class="bi bi-exclamation-triangle"></i> @error
                                </div>
                            }

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary" disabled="@submitting">
                                    @if (submitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    <i class="bi bi-check-circle"></i> Save Changes
                                </button>
                                <button type="button" class="btn btn-secondary" @onclick='() => Navigation.NavigateTo($"/obituaries/{Id}")'>
                                    Cancel
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private ObituaryUpdateDto? model;
    private bool loading = true;
    private bool submitting = false;
    private string? error;
    private string currentPhotoUrl = string.Empty;
    private string apiBase = ""; // Will be set from HttpClient BaseAddress


    protected override async Task OnInitializedAsync()
    {
        if (!AuthState.IsLoggedIn)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        // Get the backend URL from HttpClient's BaseAddress
        apiBase = HttpClient.BaseAddress?.ToString().TrimEnd('/') ?? "";
        await LoadObituaryAsync();
    }
    private string computedPhotoUrl = string.Empty;

    private async Task LoadObituaryAsync()
    {
        loading = true;
        error = null;

        try
        {
            var obituary = await ObituaryService.GetAsync(Id);
            Console.WriteLine($"Loaded obituary: {obituary?.PhotoUrl}");
            if (obituary == null)
            {
                error = "Obituary not found.";
                return;
            }

            // store raw relative path
            currentPhotoUrl = obituary.PhotoUrl;

            // compute full URL (ensure apiBase has no trailing slash)
            if (!string.IsNullOrEmpty(currentPhotoUrl))
            {
                computedPhotoUrl = $"{apiBase}{currentPhotoUrl}";
            }
            else
            {
                computedPhotoUrl = string.Empty;
            }

            model = new ObituaryUpdateDto
            {
                FullName = obituary.FullName,
                DateOfBirth = obituary.DateOfBirth,
                DateOfDeath = obituary.DateOfDeath,
                Biography = obituary.Biography,
                PhotoUrl = obituary.PhotoUrl
            };
        }
        catch (Exception ex)
        {
            error = $"Failed to load obituary: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }


    private async Task HandleSubmit()
    {
        if (model == null) return;

        submitting = true;
        error = null;

        try
        {
            var success = await ObituaryService.UpdateAsync(Id, model);

            if (success)
            {
                Navigation.NavigateTo($"/obituaries/{Id}");
            }
            else
            {
                error = "Failed to update obituary. Please try again.";
            }
        }
        catch (Exception ex)
        {
            error = $"An error occurred: {ex.Message}";
        }
        finally
        {
            submitting = false;
        }
    }
}