@page "/obituaries/{Id:int}"
@inject ObituaryService ObituaryService
@inject NavigationManager Navigation
@inject AuthState AuthState
@using Frontend.Blazor.Services
@using Frontend.Blazor.Models

<PageTitle>@(obituary?.FullName ?? "Obituary Details")</PageTitle>

<div class="container mt-4">
    @if (loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (error != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @error
        </div>
        <button class="btn btn-secondary" @onclick='() => Navigation.NavigateTo("/obituaries")'>
            Back to Obituaries
        </button>
    }
    else if (obituary != null)
    {
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow">
                    @if (!string.IsNullOrEmpty(obituary.PhotoUrl))
                    {
                        <img src="@($"{apiBase}{obituary.PhotoUrl}")" class="card-img-top obituary-photo"
                            style="width:300px; height:auto;" />
                    }

                    <div class="card-body">
                        <h1 class="card-title mb-3">@obituary.FullName</h1>

                        <div class="mb-4">
                            <p class="lead text-muted mb-2">
                                <i class="bi bi-calendar-event"></i>
                                @obituary.DateOfBirth.ToString("MMMM d, yyyy") - @obituary.DateOfDeath.ToString("MMMM d, yyyy")
                            </p>
                            <p class="text-muted">
                                <small>Age: @CalculateAge(obituary.DateOfBirth, obituary.DateOfDeath) years</small>
                            </p>
                        </div>

                        <div class="mb-4">
                            <h5 class="mb-3">Biography</h5>
                            <p style="white-space: pre-line;">@obituary.Biography</p>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi bi-calendar"></i> Published @obituary.CreatedAt.ToString("MMMM d, yyyy")
                            </small>

                            @if (AuthState.IsLoggedIn)
                            {
                                <div>
                                    <button class="btn btn-primary btn-sm me-2" @onclick="EditObituary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-danger btn-sm" @onclick="ShowDeleteConfirm">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <button class="btn btn-secondary" @onclick='() => Navigation.NavigateTo("/obituaries")'>
                        <i class="bi bi-arrow-left"></i> Back to All Obituaries
                    </button>
                </div>
            </div>
        </div>

        @if (showDeleteModal)
        {
            <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Confirm Delete</h5>
                            <button type="button" class="btn-close" @onclick="HideDeleteConfirm"></button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete this obituary for <strong>@obituary.FullName</strong>?</p>
                            <p class="text-danger"><small>This action cannot be undone.</small></p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirm">Cancel</button>
                            <button type="button" class="btn btn-danger" @onclick="DeleteObituary" disabled="@deleting">
                                @if (deleting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Obituary? obituary;
    private bool loading = true;
    private string? error;
    private bool showDeleteModal = false;
    private bool deleting = false;

    private string apiBase = "https://comp4976assignment1backend.azurewebsites.net";


    protected override async Task OnInitializedAsync()
    {
        await LoadObituaryAsync();
    }

    private async Task LoadObituaryAsync()
    {
        loading = true;
        error = null;
        try
        {
            obituary = await ObituaryService.GetAsync(Id);
            if (obituary == null)
            {
                error = "Obituary not found.";
            }
        }
        catch (Exception ex)
        {
            error = $"Failed to load obituary: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private int CalculateAge(DateTime birth, DateTime death)
    {
        var age = death.Year - birth.Year;
        if (death.Month < birth.Month || (death.Month == birth.Month && death.Day < birth.Day))
            age--;
        return age;
    }

    private void EditObituary()
    {
        Navigation.NavigateTo($"/obituaries/{Id}/edit");
    }

    private void ShowDeleteConfirm()
    {
        showDeleteModal = true;
    }

    private void HideDeleteConfirm()
    {
        showDeleteModal = false;
    }

    private async Task DeleteObituary()
    {
        deleting = true;
        try
        {
            var success = await ObituaryService.DeleteAsync(Id);
            if (success)
            {
                Navigation.NavigateTo("/obituaries");
            }
            else
            {
                error = "You are not authorized to delete this obituary.";
                showDeleteModal = false;
            }
        }
        catch (Exception ex)
        {
            error = $"Delete failed: {ex.Message}";
            showDeleteModal = false;
        }
        finally
        {
            deleting = false;
        }
    }
}