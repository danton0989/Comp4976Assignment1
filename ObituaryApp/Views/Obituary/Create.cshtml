@model ObituaryApp.Models.Obituary

@{
    ViewData["Title"] = "Create Obituary";
}

<h1>Create Obituary</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    
    <div>
        <label asp-for="FullName">Full Name:</label><br />
        <input asp-for="FullName" style="width: 300px;" />
        <span asp-validation-for="FullName"></span>
    </div>
    <br />
    
    <div>
        <label asp-for="DateOfBirth">Date of Birth:</label><br />
        <input asp-for="DateOfBirth" type="date" />
        <span asp-validation-for="DateOfBirth"></span>
    </div>
    <br />
    
    <div>
        <label asp-for="DateOfDeath">Date of Death:</label><br />
        <input asp-for="DateOfDeath" type="date" />
        <span asp-validation-for="DateOfDeath"></span>
    </div>
    <br />
    
    <div>
        <label asp-for="Biography">Biography:</label><br />
        <textarea asp-for="Biography" rows="10" cols="50"></textarea>
        <span asp-validation-for="Biography"></span>
    </div>
    <br />
    
    <div>
        <label for="photo">Photo (optional):</label><br />
        <input type="file" name="photo" accept="image/*" />
    </div>
    <br />
    
    <div>
        <button type="submit">Create</button>
    </div>
</form>
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>
